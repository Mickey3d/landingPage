{% extends 'home_page/admin/layout_admin.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block wrapper %}
    <h1>HomePage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ homepage.id }}</td>
            </tr>
            <tr>
                <th>SiteName</th>
                <td>{{ homepage.siteName }}</td>
            </tr>
            <tr>
                <th>Menu</th>
                <td>{{ homepage.menu ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Header</th>
                <td>{{ homepage.header ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Services</th>
                <td>{{ homepage.services ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Portofolio</th>
                <td>{{ homepage.portofolio ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Footer</th>
                <td>{{ homepage.footer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CopyrightYear</th>
                <td>{{ homepage.copyrightYear }}</td>
            </tr>
            <tr>
                <th>CopyrightName</th>
                <td>{{ homepage.copyrightName }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark btn-md" href="{{ path('home_page_new') }}"><i class="fas fa-home"></i> {{ "Site"|trans }} </a>

    <a class="btn btn-info btn-md" href="{{ path('home_page_edit', {'id': homepage.id}) }}"><i class="fas fa-edit"></i>  {{ "Editer"|trans }}</a>

    {{ include('home_page/admin/_delete_form.html.twig') }}
{% endblock %}
